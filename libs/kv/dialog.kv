<Dialog>
	MDCard:
		elevation: 30
		radius: [15]
		orientation: "vertical"
		size_hint: None, None
		width: dp(280)
		height: dp(300)
		padding: 10
		pos_hint: {"center_x":.5, "center_y":.5}
		MDGridLayout:
			cols: 2
			spacing: 10
			padding: 10
			MDLabel:
				text: "Name"
				pos_hint: {"center_y":.5}
				# halign: "center"
			RoundTextField:
				hint_text: "e.g.Haikyu"
			MDLabel:
				text: "Episodes"
				pos_hint: {"center_y":.5}
			RoundTextField:
				hint_text: "e.g.Haikyu"
		MDBoxLayout:
			spacing: 50
			size_hint: .5,.2
			pos_hint: {"center_x":.5}
			MDIconButton:
				icon: "close-thick"
				md_bg_color: 0,1,1,1
			MDIconButton:
				icon: "check-bold"
				md_bg_color: 0,1,1,1
